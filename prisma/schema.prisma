generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Car {
  id            String   @id @default(cuid())
  brand         String
  model         String
  pricePerMonth Int
  fuelType      String   // ELECTRIC | HYBRID | GASOLINE | DIESEL
  transmission  String   // Automatic | Manual
  year          Int
  imageUrl      String

  createdAt DateTime @default(now())

  favorites Favorite[]
}

model Favorite {
  id     String @id @default(cuid())
  carId  String
  deviceId String

  car Car @relation(fields: [carId], references: [id], onDelete: Cascade)

  @@unique([carId, deviceId])
}
